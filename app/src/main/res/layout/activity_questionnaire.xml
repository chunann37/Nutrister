<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_background3"
    tools:context=".Questionnaire">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="false"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Evaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:layout_centerHorizontal="true"
                    android:text="@string/health_evaluation"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/exerciseQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:gravity="center_vertical"
                    android:layout_below="@id/Evaluation"
                    android:layout_marginStart="20dp"
                    android:text="@string/exercise"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_run_24"
                    app:drawableTint="@color/black"
                    android:drawablePadding="10dp"/>

                <Spinner
                    android:id="@+id/exerciseSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/exerciseQ"
                    android:layout_alignStart="@id/exerciseQ"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/drinkQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/exerciseSpinner"
                    android:layout_marginTop="35dp"
                    android:layout_alignStart="@id/exerciseQ"
                    android:gravity="center_vertical"
                    android:text="@string/drink_heavily"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_wine_24"
                    android:drawablePadding="10dp"
                    app:drawableTint="@color/black"/>

                <Spinner
                    android:id="@+id/drinkSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/drinkQ"
                    android:layout_alignStart="@id/exerciseQ"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/smokeQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/drinkSpinner"
                    android:layout_marginTop="35dp"
                    android:layout_alignStart="@id/exerciseQ"
                    android:gravity="center_vertical"
                    android:text="@string/smoke"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_smoke_24"
                    app:drawableTint="@color/black"
                    android:drawablePadding="10dp"/>

                <RadioGroup
                    android:id="@+id/smokeRG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toEndOf="@id/smokeQ"
                    android:layout_below="@id/drinkSpinner"
                    android:layout_alignTop="@id/smokeQ"
                    android:layout_marginStart="25dp">

                    <RadioButton
                        android:id="@+id/smoke_Yes"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="@string/yes"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/smoke_No"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:text="@string/no"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RadioGroup>

                <TextView
                    android:id="@+id/bloodPressureQ"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_alignStart="@id/exerciseQ"
                    android:layout_below="@id/smokeQ"
                    android:gravity="center_vertical"
                    android:text="@string/highBloodPressure"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_up_24"
                    app:drawableTint="@color/black"
                    android:drawablePadding="10dp"/>

                <RadioGroup
                    android:id="@+id/bloodPressureRG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toEndOf="@id/bloodPressureQ"
                    android:layout_below="@id/smokeRG"
                    android:layout_alignStart="@id/smokeRG"
                    android:layout_alignTop="@id/bloodPressureQ"
                    >

                    <RadioButton
                        android:id="@+id/bp_Yes"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="@string/yes"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/bp_No"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="@string/no"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RadioGroup>

                <TextView
                    android:id="@+id/bloodSugarQ"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_below="@id/bloodPressureQ"
                    android:layout_alignStart="@id/exerciseQ"
                    android:gravity="center_vertical"
                    android:text="@string/highBloodSugar"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_up_24"
                    app:drawableTint="@color/black"
                    android:drawablePadding="10dp"/>

                <RadioGroup
                    android:id="@+id/bloodSugarRG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toEndOf="@id/bloodPressureQ"
                    android:layout_below="@id/bloodPressureRG"
                    android:layout_alignStart="@id/smokeRG"
                    android:layout_alignTop="@id/bloodSugarQ">

                    <RadioButton
                        android:id="@+id/bs_Yes"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="@string/yes"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/bs_No"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="@string/no"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RadioGroup>

                <TextView
                    android:id="@+id/CholesterolQ"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_below="@id/bloodSugarQ"
                    android:layout_alignStart="@id/exerciseQ"
                    android:gravity="center_vertical"
                    android:text="@string/highCholesterol"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_up_24"
                    app:drawableTint="@color/black"
                    android:drawablePadding="10dp"/>

                <RadioGroup
                    android:id="@+id/bloodCholesterolRG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toEndOf="@id/CholesterolQ"
                    android:layout_alignTop="@id/CholesterolQ"
                    android:layout_alignStart="@id/smokeRG">

                    <RadioButton
                        android:id="@+id/bc_Yes"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="@string/yes"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/bc_No"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="@string/no"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RadioGroup>

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_centerHorizontal="true"
                    android:onClick="finishQuestion"
                    android:text="@string/finish"
                    android:textStyle="bold"
                    android:layout_below="@id/CholesterolQ"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_below="@id/button">
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>