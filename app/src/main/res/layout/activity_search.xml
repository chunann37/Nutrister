<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/honeydew"
    tools:context=".ui.search.SearchActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="false"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food information"
                    android:textSize="25sp"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    app:drawableLeftCompat="@drawable/information_24"
                    android:drawablePadding="8dp">
                </com.google.android.material.textview.MaterialTextView>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/title"
                    tools:srcCompat="@tools:sample/avatars" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/foodLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/labelInput"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:text="Food Label"
                    android:textSize="20sp"
                    app:drawableLeftCompat="@drawable/foodname_24"
                    android:drawablePadding="8dp"
                    >
                </com.google.android.material.textview.MaterialTextView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/categoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/categoryInput"
                    android:layout_alignStart="@id/foodLabel"
                    android:layout_marginTop="15dp"
                    android:text="Category"
                    android:textSize="20sp"
                    app:drawableLeftCompat="@drawable/category_24"
                    android:drawablePadding="8dp">
                </com.google.android.material.textview.MaterialTextView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/energy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/categoryText"
                    android:layout_alignStart="@id/foodLabel"
                    android:layout_marginTop="15dp"
                    android:text="Energy"
                    android:textSize="20sp"
                    app:drawableLeftCompat="@drawable/energy_24"
                    android:drawablePadding="8dp">

                </com.google.android.material.textview.MaterialTextView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/carbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/energy"
                    android:layout_alignStart="@id/foodLabel"
                    android:layout_marginTop="15dp"
                    android:text="Carbs"
                    android:textSize="20sp"
                    app:drawableLeftCompat="@drawable/carbs_24"
                    android:drawablePadding="8dp">
                </com.google.android.material.textview.MaterialTextView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/protein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/carbs"
                    android:layout_alignStart="@id/foodLabel"
                    android:layout_marginTop="15dp"
                    android:text="Protein"
                    android:textSize="20sp"
                    app:drawableLeftCompat="@drawable/proteins_24"
                    android:drawablePadding="8dp">
                </com.google.android.material.textview.MaterialTextView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/protein"
                    android:layout_alignStart="@id/foodLabel"
                    android:layout_marginTop="15dp"
                    android:text="Fat"
                    android:textSize="20sp"
                    app:drawableLeftCompat="@drawable/fat_24"
                    android:drawablePadding="8dp">
                </com.google.android.material.textview.MaterialTextView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fiber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fat"
                    android:layout_alignStart="@id/foodLabel"
                    android:layout_marginTop="15dp"
                    android:text="Fiber"
                    android:textSize="20sp"
                    app:drawableLeftCompat="@drawable/fiber_24"
                    android:drawablePadding="8dp">
                </com.google.android.material.textview.MaterialTextView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fiber"
                    android:layout_alignStart="@id/foodLabel"
                    android:layout_marginTop="15dp"
                    android:text="Weight"
                    android:textSize="20sp"
                    app:drawableLeftCompat="@drawable/weight_24"
                    android:drawablePadding="8dp">
                </com.google.android.material.textview.MaterialTextView>

                <TextView
                    android:id="@+id/weightInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/weight"
                    android:layout_marginStart="180dp"
                    android:text="weight"
                    android:textSize="18sp">
                </TextView>

                <TextView
                    android:id="@+id/categoryInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labelInput"
                    android:layout_marginStart="180dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:text="category"
                    android:textSize="18sp">
                </TextView>

                <TextView
                    android:id="@+id/labelInput"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="180dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_below="@id/imageView"
                    android:text="food label"
                    android:textSize="18sp">
                </TextView>

                <TextView
                    android:id="@+id/energyInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/energy"
                    android:layout_marginStart="180dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:text="energy"
                    android:textSize="18sp">
                </TextView>

                <TextView
                    android:id="@+id/carbsInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/carbs"
                    android:layout_marginStart="180dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:text="carbs"
                    android:textSize="18sp">
                </TextView>

                <TextView
                    android:id="@+id/proteinInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/protein"
                    android:layout_marginStart="180dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:text="protein"
                    android:textSize="18sp">
                </TextView>

                <TextView
                    android:id="@+id/fatInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/fat"
                    android:layout_marginStart="180dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:text="fat"
                    android:textSize="18sp">
                </TextView>

                <TextView
                    android:id="@+id/fiberInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/fiber"
                    android:layout_marginStart="180dp"
                    android:layout_marginLeft="50dp"
                    android:text="fiber"
                    android:textSize="18sp">
                </TextView>

                <TextView
                    android:id="@+id/energyUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/energyInput"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@id/energyInput"
                    android:layout_toRightOf="@id/energyInput"
                    android:text="@string/kcal"
                    android:textSize="18sp">
                </TextView>

                <TextView
                    android:id="@+id/carbsUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/carbsInput"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@id/carbsInput"
                    android:layout_toRightOf="@id/carbsInput"
                    android:text="@string/g"
                    android:textSize="18sp">
                </TextView>

                <TextView
                    android:id="@+id/proteinUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/proteinInput"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@id/proteinInput"
                    android:layout_toRightOf="@id/proteinInput"
                    android:text="@string/g"
                    android:textSize="18sp">
                </TextView>

                <TextView
                    android:id="@+id/fatUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/fatInput"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@id/fatInput"
                    android:layout_toRightOf="@id/fatInput"
                    android:text="@string/g"
                    android:textSize="18sp">
                </TextView>

                <TextView
                    android:id="@+id/fiberUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/fiberInput"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@id/fiberInput"
                    android:layout_toRightOf="@id/fiberInput"
                    android:text="@string/g"
                    android:textSize="18sp">
                </TextView>

                <TextView
                    android:id="@+id/weightUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/weightInput"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@id/weightInput"
                    android:layout_toRightOf="@id/weightInput"
                    android:text="@string/g"
                    android:textSize="18sp">
                </TextView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mealCatalog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/weight"
                    android:layout_marginTop="25dp"
                    android:layout_alignStart="@id/foodLabel"
                    android:text="Meal"
                    android:textSize="20sp"
                    app:drawableLeftCompat="@drawable/meal_24"
                    android:drawablePadding="8dp">
                </com.google.android.material.textview.MaterialTextView>

                <Spinner
                    android:id="@+id/mealSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/weightInput"
                    android:layout_marginTop="25dp"
                    android:layout_alignStart="@id/weightInput">
                </Spinner>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/servingSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mealCatalog"
                    android:layout_marginTop="20dp"
                    android:layout_alignStart="@id/foodLabel"
                    android:text="Serving Size"
                    android:textSize="20sp"
                    app:drawableLeftCompat="@drawable/serves_24"
                    android:drawablePadding="8dp"/>

                <Spinner
                    android:id="@+id/servingSpinner"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mealSpinner"
                    android:layout_marginTop="20dp"
                    android:layout_alignStart="@id/fiberInput">
                </Spinner>


                <Button
                    android:id="@+id/addFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/servingSpinner"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="40dp"
                    android:layout_alignBaseline="@id/customFoodBtn"
                    android:text="Add to Log"
                    android:textSize="14sp"
                    android:onClick="addFood"/>

                <TextView
                    android:id="@+id/customFoodDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/servingSize"
                    android:layout_alignStart="@id/servingSize"
                    android:layout_marginTop="25dp"
                    android:text="@string/custom_food_desc"/>

                <Button
                    android:id="@+id/customFoodBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/customFoodDesc"
                    android:layout_alignStart="@id/customFoodDesc"
                    android:text="Custom"
                    android:textSize="14sp"
                    android:onClick="naviToCustom"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>